generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String          @id @default(cuid())
  email                 String          @unique
  password              String
  name                  String?
  emailVerified         Boolean         @default(false)
  createdAt             DateTime        @default(now())
  role                  Role            @default(DOCTOR)
  patientRecordsCreated PatientRecord[] @relation("DoctorRecords")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
}

model PatientRecord {
  id        String   @id @default(cuid())
  doctorId  String
  createdAt DateTime @default(now())
  age       Int
  gender    String
  deleted   Boolean  @default(false)
  name      String
  weight    Float
  doctor    User     @relation("DoctorRecords", fields: [doctorId], references: [id])
}

enum Role {
  ADMIN
  DOCTOR
  STAFF
}
